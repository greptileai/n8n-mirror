{
  "name": "@n8n/sentry-config",
  "version": "1.0.0",
  "description": "Centralized Sentry filters and beforeSend composition for n8n",
  "scripts": {
    "clean": "rimraf dist .turbo",
    "dev": "pnpm watch",
    "typecheck": "tsc --noEmit",
    "build": "tsc -p tsconfig.build.json",
    "format": "biome format --write src",
    "format:check": "biome ci src",
    "lint": "eslint . --quiet",
    "lint:fix": "eslint . --fix",
    "watch": "tsc -p tsconfig.build.json --watch",
    "test": "jest",
    "test:unit": "jest",
    "test:dev": "jest --watch"
  },
  "main": "dist/index.js",
  "module": "src/index.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "@sentry/node": "catalog:sentry",
    "axios": "catalog:",
    "n8n-workflow": "workspace:*"
  },
  "devDependencies": {
    "@n8n/typescript-config": "workspace:*"
  }
}
